<!DOCTYPE html>
<html>
<head>
  <title>Taxiproject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= link_to("Home", root_path) %>

<% if current_admin %>
<%= link_to("Log out", destroy_admin_session_path) %>
<%= link_to("Register new driver", new_driver_registration_path) %>
<%elsif !current_driver %>
<%= link_to("Log in(for admins)", admin_session_path) %>
<%end%>
<% if  current_driver %>
<%= link_to("Log out", destroy_driver_session_path) %>
<%elsif !current_admin %>
<%= link_to("Drivers: Log in", driver_session_path) %>
<%end%>


<%= yield %>

</body>
</html>

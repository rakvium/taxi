<p id="notice"><%= notice %></p>

<h1>Текущие заказы</h1>
<%= link_to 'Новый заказ', new_order_path %>
<br>
  <table id="data-table" class = "one" border=1 rules=rows></table>
  <%= javascript_include_tag('orders.js') %>
  <%= stylesheet_link_tag "orders" %>
  <table id="driver-table" class = "two" border=1 rules=rows>
    <thead>
      <tr>
        <th>Статус</th>
        <th>ID</th>
        <th>Имя</th>
        <th>Номер телефона</th>
      </tr>
    </thead>
    <tbody>
      <% @drivers.each do |driver| %>
        <tr>
          <td><%= status_string(driver.status) %></td>
          <td><%= driver.id %></td>
          <td><%= driver.name %></td>
          <td><%= driver.phone_number_string %></td>
        </tr>
      <% end %>
    </tbody>
  </table>




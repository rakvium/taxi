<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :AdresFrom %><br>
    <%= f.text_field :AdresFrom %>
  </div>
  <div class="field">
    <%= f.label :AdresTo %><br>
    <%= f.text_field :AdresTo %>
  </div>
  <div class="field">
    <%= f.label :number_of_passengers %><br>
    <%= f.number_field :number_of_passengers %>
  </div>
  <div class="field">
    <%= f.label :date_of_trip %><br>
    <noscript><%= f.datetime_select :date_of_trip, discard_year:true %></noscript>
      <div class="row">
          <div class='col-sm-6'>
              <%= f.text_field :date_of_trip, :class=>'form-control hide_if_no_js', :id=>'datetimepicker4' %>
          </div>
          <%= javascript_include_tag('datetime.js') %>
      </div>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit 'Подтвердить заказ', :class=>"btn btn-success"%>
  </div>
  <a href="tel:12345678" class = "btn btn-primary">Позвонить диспетчеру<br>(123-45-678)</a>
<% end %>
